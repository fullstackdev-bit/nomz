<link rel="stylesheet" href="{{ 'ffc-bg-img-txt.css' | asset_url }}" >


{% assign ss = section.settings %}

{% style %}
  .ffc-background-image-text__image--{{ section.id }} {
    background-position: {{ ss.alignment }};
    background-image: url({{ ss.image | img_url: '2000x' }});
  }
  @media screen and (max-width:768px) {
  .ffc-background-image-text__image--{{ section.id }} {
      background-image: url({{ ss.image_mobile | img_url: '2000x' }});
    }
  }
{% endstyle %}

<div
  class="ffc-background-image-text__image ffc-background-image-text__image--{{section.id}}{% if ss.image != blank %} lazyload{% endif %}"
  {% if ss.image != blank %}
    data-sizes="auto"
  {% endif %}>
  
  {% if ss.subtitle != blank or ss.title != blank or ss.text != blank %}
    <div class="page-width">
      <div class="content-area content-area--{{ ss.layout }}">
        {% if ss.subtitle != blank %}
          <p class="subtitle">{{ ss.subtitle }}</p>
        {% endif %}
        {% if ss.title != blank %}
          <h2 class="h3">{{ ss.title | escape }}</h2>
        {% endif %}
        {% if ss.text != blank %}
          <div class="rte background-media-text__subtext">{{ ss.text }}</div>
        {% endif %}
        {% if ss.button_label != blank and ss.button_link != blank %}
          <a href="{{ ss.button_link }}" class="btn btn--coconut">
            {{ ss.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "FFC Image with text box",
    "class": "ffc-background-image-text",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading",
        "default": "Impressive"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Large image with text box"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with a full-width image to draw attention to an important detail of your brand or product line.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image Mobile"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image focal point",
        "info": "Used to keep the subject of your photo in view.",
        "default": "center",
        "options": [
          {
            "value": "top left",
            "label": "Top left"
          },
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "top right",
            "label": "Top right"
          },
          {
            "value": "center left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "center right",
            "label": "Right"
          },
          {
            "value": "bottom left",
            "label": "Bottom left"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          },
          {
            "value": "bottom right",
            "label": "Bottom right"
          }
        ]
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Text on left"
          },
          {
            "value": "right",
            "label": "Text on right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FFC Image with text box",
        "category": "Image"
      }
    ]
  }
{% endschema %}

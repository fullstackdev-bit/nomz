{% if section.settings.divider %}<div class="section--divider">{% endif %}

<div
  class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header">
      {% if section.settings.title != blank %}
        <h2 class="section-header__title section-header__title--smaller">{{ section.settings.title | escape }}</h2>
      {% endif %}
      
      {% if section.settings.rating > 0 %}
      <div class="yotpo flex f-j-center">
        <span class="yotpo-stars yotpo-bottomline">
          {% for i in (1..section.settings.rating) %}
            <span class="yotpo-icon yotpo-icon-star rating-star pull-left"></span>
          {% endfor %}
        </span>
      </div>
      {% endif %}

      {% if section.settings.content != blank %}
        <div class="rte">{{ section.settings.content }}</div>
      {% endif %}
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="ffc-testimonials__slider slick-slider" data-slider='{
      "slidesToShow": 3,
      "slidesToScroll": 3,
      "arrows": false,
      "dots": true,
      "swipeToSlide": false,
      "infinite": true,
      "adaptiveHeight": true,
      "responsive": [
        {
          "breakpoint": 835,
          "settings": {
            "slidesToShow": 1,
            "slidesToScroll": 1,
            "infinite": false
          }
        }
      ]
    }'>
      {% for block in section.blocks %}
        <div
          class="testimonials-slide testimonials-slide--{{ block.id }}"
          {{ block.shopify_attributes }}>

          <blockquote class="testimonials-slider__text">
            {% if block.settings.product != blank %}
              {% assign product = all_products[block.settings.product] %}
              <a href="{{ product.url }}#yotpoWidget">
            {% endif %}

            <span class="quote-icon">{% include 'icon-quote-ffc' %}</span>

            {% if block.settings.testimonial != blank %}
              <div class="rte-setting text-spacing">{{ block.settings.testimonial }}</div>
            {% endif %}

            {% if block.settings.rating > 0 %}
              <div class="yotpo flex f-j-center">
                <span class="yotpo-stars yotpo-bottomline">
                  {% for i in (1..block.settings.rating) %}
                    <span class="yotpo-icon yotpo-icon-star rating-star pull-left"></span>
                  {% endfor %}
                </span>
              </div>
            {% endif %}

            {% if block.settings.author != blank %}
              <cite class="author">{{ block.settings.author | escape }}</cite>
            {% endif %}

            {% if block.settings.product != blank %}
              <div class="product"><span>{{ product.title }}</span></div>
            {% endif %}

            {% if block.settings.product != blank %}
              </a>
            {% endif %}
          </blockquote>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% if section.settings.divider %}</div>{% endif %}


{% schema %}
  {
    "name": "FFC Testimonials",
    "class": "index-section ffc-testimonials",
    "max_blocks": 9,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Testimonials"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Text"
      },
      {
        "type": "range",
        "id": "rating",
        "label": "Reviews rating",
        "min": 0,
        "max": 5,
        "step": 1,
        "default": 5
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "richtext",
            "id": "testimonial",
            "label": "Text",
            "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author",
            "default": "Author's name"
          },
          {
            "type": "product",
            "id": "product",
            "label": "Reviewed Product"
          },
          {
            "type": "range",
            "id": "rating",
            "label": "Reviews rating",
            "min": 0,
            "max": 5,
            "step": 1,
            "default": 5
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FFC Testimonials",
        "category": "Text",
        "blocks": [
          {
            "type": "testimonial"
          },
          {
            "type": "testimonial"
          },
          {
            "type": "testimonial"
          }
        ]
      }
    ]
  }
{% endschema %}

{% assign ss = section.settings %}


<div class="row contact-row">
	<div class="col-md-7">
		<div class="contact_form_wrap">
			<div class="form-head-contact">
				<h1>{{ ss.contact-top-head }}</h1>
				<p>{{ ss.contact-subhead }}</p>
				<p>Our office hours are 9AM - 5PM EST, Monday to Friday.</p>
			</div>
			<form class="contact-form" action="https://formspree.io/f/mzbovvnb" method="POST">
				<div class="form-group-alt">
					<input class="contact-form-input" type="text" id="firstName" name="firstName" placeholder="First Name">
				</div>
				<div class="form-group-alt">
					<input class="contact-form-input" type="text" id="lastName" name="lastName" placeholder="Last Name">
				</div>
				<div class="form-group-alt">
					<input class="contact-form-input" type="email" id="email" name="email" placeholder="Your Email Address">
				</div>
				<div class="form-group-alt">
					<textarea class="contact-form-input" name="message" id="message" cols="30" rows="5" placeholder="Write Your Message Here"></textarea>
				</div>
				<button class="contact-form-button" type="submit">Send Message</button>
			</form>
		</div>
		<div class="info-container">
			<div class="info-group-alt">
				<a href="tel:647-370-6740"class="contact-text-link">text us | {{ ss.contacts-info-phone }}</a>
			</div>
			<div class="info-group-alt">
				<a class="contact-socials" target="_blank" href="https://www.instagram.com/nomz/" title="nomz on Instagram">
